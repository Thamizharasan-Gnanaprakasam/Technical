

#:set s dp(150)

<CanvasExample1>:
    canvas:
        Rectangle:
            pos: self.center_x - s/2, self.center_y - s/2
            size: s, s
        Ellipse:
            pos: dp(200), dp(500)
            size: s, s/2
        Line:
            points: (0,0,self.width/4,100,self.width/2,0,self.width*3/4,100,self.width,0) # x, y, x2, y2 ....., xn, yn
            width: 2

<CanvasExample2>:
    canvas:
        Line:
            points: [0,self.center_y,self.width,self.center_y]
            width: 2
        Line:
            points: [self.center_x,0,self.center_x,self.height]
            width: 2

<CanvasExample3>:
    canvas:
        Color:
            rgba: 1, 0, 0, .3
        Line:
            circle:[200,400,100] # x, y, radius
            width: 2
        Line:
            ellipse: [500,400,100,50] # x,y, radius_x,raduis_y
            width: 4
        Color:
            rgb: 1, 0, 1
        Line:
            rectangle: [800,100,200,100] # x, y, w, h

<CanvasExample4>:
    Button:
        text: "A"
        pos_hint: None, None
        pos: 100, 400
        on_press: root.on_button_click()

